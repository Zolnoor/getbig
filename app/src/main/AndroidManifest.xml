<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="zolnoor.getbig" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExerciseView"
            android:label="@string/title_activity_exercise_view"
            android:parentActivityName="zolnoor.getbig.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="zolnoor.getbig.MainActivity" />
        </activity>
        <activity android:name=".ExercisePager"
            android:label="ExercisePager"
            android:parentActivityName="zolnoor.getbig.ExerciseView" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="zolnoor.getbig.ExerciseView" />
            </activity>
    </application>

</manifest>
