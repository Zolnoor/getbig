<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".ExercisePager$PlaceholderFragment">

    <TextView
        android:id="@+id/weight"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/weightfrag"
        android:textSize="20sp"
        android:paddingTop="8dp"
        android:layout_alignBottom="@+id/weightEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <EditText
        android:id="@+id/weightEdit"
        android:inputType="number"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:paddingBottom="10dp"/>

    <View
        android:layout_width="fill_parent"
        android:paddingTop="100dp"
        android:layout_height="1dp"
        android:background="@android:color/holo_red_light"
        android:id="@+id/view"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/weightEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/notes"
        android:hint="@string/noteshint"
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:layout_height="100dp"
        android:layout_below="@+id/view"
        android:layout_alignRight="@+id/weightEdit"
        android:layout_alignEnd="@+id/weightEdit"
        android:layout_marginTop="21dp" />

</RelativeLayout>